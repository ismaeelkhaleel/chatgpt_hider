{
  "manifest_version": 3,
  "name": "ChatGPT Hide Input & Chat",
  "version": "1.0",
  "description": "Hide ChatGPT input and chat content",
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
